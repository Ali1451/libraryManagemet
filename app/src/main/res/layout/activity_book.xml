<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".book">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#F1D205"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_baseline_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/name_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="جوان موفق"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_east"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/frame"
        android:layout_width="350dp"
        android:layout_height="425dp"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view">


    </View>

    <TextView
        android:id="@+id/mojod"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#E38140"
        android:elevation="26dp"
        android:gravity="center"
        android:text="موجود"
        android:textColor="#FFFFFF"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="@+id/name_book"
        app:layout_constraintRight_toRightOf="@+id/name_book"
        app:layout_constraintTop_toBottomOf="@+id/name_book" />


    <TextView
        android:id="@+id/tv_cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="کد کتاب"
        android:textColor="#2B2A2A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame" />

    <TextView
        android:id="@+id/et_cod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="5265855"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="@id/tv_cod"
        app:layout_constraintTop_toBottomOf="@id/tv_cod" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#858282"
        app:layout_constraintLeft_toLeftOf="@+id/frame"
        app:layout_constraintRight_toRightOf="@+id/writer"
        app:layout_constraintTop_toBottomOf="@+id/et_cod" />


    <TextView
        android:id="@+id/writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="نویسنده"
        android:textColor="#2B2A2A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@+id/frame"
        app:layout_constraintTop_toTopOf="@+id/frame" />

    <TextView
        android:id="@+id/ET_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="عباس رحیمی"
        android:textColor="#0B0A0A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@+id/writer"
        app:layout_constraintTop_toBottomOf="@+id/writer" />

    <TextView
        android:id="@+id/xx1"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#858282"
        app:layout_constraintLeft_toLeftOf="@+id/frame"
        app:layout_constraintRight_toRightOf="@+id/writer"
        app:layout_constraintTop_toBottomOf="@+id/ET_writer" />


    <TextView
        android:id="@+id/tv_ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="شابک"
        android:textColor="#2B2A2A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@+id/xx1" />

    <TextView
        android:id="@+id/et_ISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9789648654356"
        android:textColor="#0B0A0A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/tv_ISBN"
        app:layout_constraintTop_toBottomOf="@+id/tv_ISBN" />

    <TextView
        android:id="@+id/xx2"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#858282"
        app:layout_constraintLeft_toLeftOf="@+id/frame"
        app:layout_constraintRight_toRightOf="@id/tv_ISBN"
        app:layout_constraintTop_toBottomOf="@+id/et_ISBN" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="تاریخ افزودن"
        android:textColor="#2B2A2A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@+id/xx2" />

    <TextView
        android:id="@+id/et_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9/4/84"
        android:textColor="#0B0A0A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/date"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/xx3"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#858282"
        app:layout_constraintLeft_toLeftOf="@+id/frame"
        app:layout_constraintRight_toRightOf="@id/date"
        app:layout_constraintTop_toBottomOf="@+id/et_date" />


    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="آدرس"
        android:textColor="#2B2A2A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/frame"
        app:layout_constraintTop_toBottomOf="@+id/xx3" />

    <TextView
        android:id="@+id/et_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ق 11 ردیف 2"
        android:textColor="#0B0A0A"
        android:textSize="24dp"
        app:layout_constraintRight_toRightOf="@id/address"
        app:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#858282"
        app:layout_constraintLeft_toLeftOf="@+id/frame"
        app:layout_constraintRight_toRightOf="@id/date"
        app:layout_constraintTop_toBottomOf="@+id/et_address" />


</androidx.constraintlayout.widget.ConstraintLayout>