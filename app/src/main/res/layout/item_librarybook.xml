<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_name_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="30dp"
        android:text="جوان موفق"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_writer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:text="عباس رحیمی"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintRight_toLeftOf="@id/tv_name_book"
        app:layout_constraintTop_toTopOf="@id/tv_name_book" />

    <TextView
        android:id="@+id/tv_address_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="ق 11 ردیف دوم"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_name_book"
        app:layout_constraintRight_toRightOf="@id/tv_name_book"
        android:textSize="24sp" />



</androidx.constraintlayout.widget.ConstraintLayout>